<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/studimage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="45dp"
        android:layout_marginLeft="45dp"
        android:background="@color/colorPrimaryDark" />

    <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_above="@+id/studimage"-->
        <!--android:text="Student details"-->
        <!--android:textColor="@color/Black"-->
        <!--android:textStyle="bold"-->
        <!--android:visibility="visible" />-->

    <TextView
        android:id="@+id/studname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/studimage"
        android:text="Student name"
        android:textAlignment="center"
        android:textSize="24dp"

        />

    <TextView
        android:id="@+id/studroll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/studname"
        android:layout_marginLeft="10dp"
        android:text="Roll Number"
        android:textAlignment="center"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/studclass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/studroll"
        android:layout_marginLeft="10dp"
        android:text="Class"
        android:textAlignment="center"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/studaddress"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/studclass"
        android:layout_marginLeft="10dp"
        android:text="Address"
        android:textAlignment="center"
        android:textSize="24dp" />


    <Button
        android:id="@+id/click_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click for Back"
        android:layout_alignParentBottom="true"
        />


</RelativeLayout>
